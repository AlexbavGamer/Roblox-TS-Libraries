{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"module": "esnext",
		"noLib": false,
		"strict": true,
		"target": "esnext",
		"types": [],
		// required, configurable
		"rootDir": "src",
		"outDir": "out",
		// optional
		"baseUrl": "src",
		"declaration": true,
		// optional, non-configurable
		"jsx": "react",
		"jsxFactory": "Roact.createElement"
	},
	"typeAcquisition": {
		"enable": true
	},
	"include": [
		"./src/**/*"
	]
}
